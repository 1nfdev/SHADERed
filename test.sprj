<project>
	<pipeline>
		<item type="shader" name="VertexShader">
			<path>vertex.hlsl</path>
			<type>Vertex</type>
			<entry>main</entry>
			<input>
        <element id="0" format="R32G32B32_FLOAT" offset="0">POSITION</element>
        <element id="0" format="R32G32B32_FLOAT" offset="16">NORMAL</element>
			</input>
			<variables>
				<variable type="float4x4" name="matVP" system="ViewProjection"/>
        <variable type="float" name="alpha">
          <row>
            <value>0.75</value>
          </row>
        </variable>
        <variable type="float2" name="funcTest" function="Normalize" slot="0">
          <row>
            <value>3.14</value>
            <value>1.2</value>
          </row>
        </variable>
			</variables>
		</item>
		<item type="shader" name="PixelShader">
			<path>pixel.hlsl</path>
			<type>Pixel</type>
			<entry>main</entry>
		</item>
		<item type="geometry" name="Box">
			<type>cube</type>
      <width>1</width>
      <height>1</height>
      <depth>1</depth>
      <topology>TriangleList</topology>
		</item>
	</pipeline>
</project>